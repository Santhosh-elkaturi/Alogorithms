FROM docker-remote.registry.kroger.com/confluentinc/cp-kafka:5.1.2
 	 
 	EXPOSE 2181
 	EXPOSE 9092
 	 
 	RUN mkdir /apps
 	 
 	COPY etc/docker/kafka/bootstrap.sh /
 	COPY etc/docker/kafka/healthcheck.sh /
 	COPY etc/docker/kafka/kafka_2.12-2.4.0.tgz /apps
 	 
 	RUN cd /apps \
 	&& tar -xzf /apps/kafka_2.12-2.4.0.tgz \
 	&& ln -s /apps/kafka_2.12-2.4.0 kafka
 	 
 	HEALTHCHECK --interval=10s --start-period=1m CMD /healthcheck.sh
 	 
 	ENTRYPOINT ["bash", "/bootstrap.sh" ]
 
 
